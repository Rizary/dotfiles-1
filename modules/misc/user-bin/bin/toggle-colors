#!/bin/sh

# Figure out the color to set to and the opposite of that ('light' and 'dark').
color=$1
[[ $color = 'dark' ]] && opposite='light' || opposite='dark'

# Set up Xresources colorscheme.
# TODO fix xrdb colors
# sed -i "s/.Xresources-$opposite/.Xresources-$color/" ~/.Xresources
# xrdb ~/.Xresources

# Set up emacs theme
emacsclient --eval "(load-theme 'solarized-$color t)"

